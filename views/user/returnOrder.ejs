        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="call-to-action-inner call-to-action-inner-6 ltn__secondary-bg position-relative text-center---">
                        <div class="coll-to-info text-color-white">
                            <h1>Buy medical disposable face mask <br> to protect your loved ones</h1>
                        </div>
                        <div class="btn-wrapper">
                            <a class="btn btn-effect-3 btn-white" href="/shop">Explore Products <i class="icon-next"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- CALL TO ACTION END -->


    <script>
        toastr.options = {
            "closeButton": true,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "slideDown",
            "hideMethod": "fadeOut"
        };
        
        function addToWishlist(id) {
            $.ajax({
                url: "/return",
                method: 'post',
                data: {
                    query: id
                },
                success: (response) => {
                    if (response.status === true) {
                        toastr.success("Order Returned");
                        window.location.href ='/'
                    } else if (response.noReturn === true) {
                        toastr.warning("Return Date Exceeded");
                    } else if (response.noOrder === true){
                        toastr.warning("No Order Available For Return");
                    }
                }
            });
        }
    </script>

