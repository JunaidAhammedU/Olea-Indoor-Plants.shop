        <script>
            function validateForm() {
                var firstName = document.getElementsByName("name")[0];
                var lastName = document.getElementsByName("lastName")[0];
                var email = document.getElementsByName("email")[0];
                var password = document.getElementsByName("password")[0];
                var confirmPassword = document.getElementsByName("confirmPassword")[0];
                
                var isValid = true;

                if (firstName.value.trim() === "") {
                    highlightField(firstName);
                    firstName.placeholder = "Field is empty";
                    isValid = false;
                } else {
                    removeHighlight(firstName);
                    firstName.placeholder = "";
                }

                if (lastName.value.trim() === "") {
                    highlightField(lastName);
                    lastName.placeholder = "Field is empty";
                    isValid = false;
                } else {
                    removeHighlight(lastName);
                    lastName.placeholder = "";
                }
                if (email.value.trim() === "") {
                    highlightField(email);
                    email.placeholder = "Field is empty";
                    isValid = false;
                } else if (!isValidEmail(email.value)) {
                    highlightField(email);
                    alert("Please enter a valid email address.");
                    isValid = false;
                } else {
                    removeHighlight(email);
                    email.placeholder = "";
                }

                if (password.value === "") {
                    highlightField(password);
                    password.placeholder = "Field is empty";
                    isValid = false;
                } else if (password.value.length < 6) {
                    highlightField(password);
                    alert("Password should be at least 6 characters long.");
                    isValid = false;
                } else {
                    removeHighlight(password);
                    password.placeholder = "";
                }

                if (confirmPassword.value === "") {
                    highlightField(confirmPassword);
                    confirmPassword.placeholder = "Field is empty";
                    isValid = false;
                }else if (confirmPassword.value !== password.value) {
                    highlightField(confirmPassword);
                    confirmPassword.placeholder = "Your password is not matching!!";
                    alert("Your password is not matching!!");
                    isValid = false;
                }else if (confirmPassword.value.length < 6) {
                    highlightField(confirmPassword);
                    alert("Password should be at least 6 characters long.");
                    isValid = false;
                } else {
                    removeHighlight(confirmPassword);
                    confirmPassword.placeholder = "";
                }

                return isValid;
            }

            function highlightField(field) {
                field.style.borderColor = "red";
                field.focus();
            }

            function removeHighlight(field) {
                field.style.borderColor = "";
            }

            function isValidEmail(email) {
                // Basic email format validation
                var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            }
        </script>
