
<%- include('../partials/userPartials/header2.ejs') -%>

    <div class="ltn__utilize-overlay"></div>

    <!-- BREADCRUMB AREA START -->
    <div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image "  data-bs-bg="img/bg/14.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ltn__breadcrumb-inner">
                        <h1 class="page-title">Wishlist</h1>
                        <div class="ltn__breadcrumb-list">
                            <ul>
                                <li><a href="/"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                                <li>Wishlist</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- BREADCRUMB AREA END -->

    <!-- WISHLIST AREA START -->
    <div class="liton__wishlist-area mb-105">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping-cart-inner">
                        <div class="shoping-cart-table table-responsive">
                            <table class="table">
                                <tbody>
                                    <% products.forEach(product => { %>
                                    <tr>
                                        <td class="cart-product-remove"><a href="removeWishlist/<%= product.productId.id %>">x</a></td>
                                        <td class="cart-product-image">
                                            <% if (product && product.productId && product.productId.images && product.productId.images.length > 0) { %>
                                              <a href="product-details.html">
                                                <img src="/assets/products/<%= product.productId.images[0] %>" alt="#">
                                              </a>
                                            <% } %>
                                        </td>  
                                        <td class="cart-product-info">
                                            <h4><a href="product-details.html"><%= product.productId.name %></a></h4>
                                        </td>
                                        <td class="cart-product-price">â‚¹ <%= product.productId.price %></td>

                                        <% if (product.productId.productQuantity > 0) { %>
                                            <td class="cart-product-stock text-success">In Stock</td>
                                        <% } else { %>
                                            <td class="cart-product-stock text-danger">Out of Stock</td>
                                        <%} %>

                                        <td class="cart-product-add-cart">
                                            <a class="submit-button-1" href="addFromWish/<%= product.productId.id %>" title="Add to Cart">Add to Cart</a>
                                        </td>
                                    </tr>
                                    <% }) %>  
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- WISHLIST AREA START -->

    <!-- CALL TO ACTION START (call-to-action-6) -->
    <div class="ltn__call-to-action-area call-to-action-6 before-bg-bottom" data-bs-bg="img/1.jpg--">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="call-to-action-inner call-to-action-inner-6 ltn__secondary-bg position-relative text-center---">
                        <div class="coll-to-info text-color-white">
                            <h1>Buy medical disposable face mask <br> to protect your loved ones</h1>
                        </div>
                        <div class="btn-wrapper">
                            <a class="btn btn-effect-3 btn-white" href="shop.html">Explore Products <i class="icon-next"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- CALL TO ACTION END -->

