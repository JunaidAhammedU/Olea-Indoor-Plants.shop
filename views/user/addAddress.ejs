    <script>
        function validateForm() {
            var firstName = document.getElementsByName("Fullname")[0];
            var email = document.getElementsByName("email")[0];
            var phone = document.getElementsByName("phone")[0];
            var alternativeMob = document.getElementsByName("alternativeMob")[0];
            var House_number_and_street = document.getElementsByName("House_number_and_street")[0];
            var Apartment = document.getElementsByName("Apartment")[0];
            var City = document.getElementsByName("City")[0];
            var State = document.getElementsByName("State")[0];
            var Zip = document.getElementsByName("Zip")[0];
            
            var isValid = true;
            // 
            if (firstName.value.trim() === "") {
                highlightField(firstName);
                firstName.placeholder = "Field is empty";
                isValid = false;
            } else {
                removeHighlight(firstName);
                firstName.placeholder = "";
            }
            // 
            if (email.value.trim() === "") {
                highlightField(email);
                email.placeholder = "Field is empty";
                isValid = false;
            } else if (!isValidEmail(email.value)) {
                highlightField(email);
                alert("Please enter a valid email address.");
                isValid = false;
            } else {
                removeHighlight(email);
                email.placeholder = "";
            }
            // 
            if (phone.value.trim() === "") {
                highlightField(phone);
                phone.placeholder = "Field is empty";
                isValid = false;
            } else {
                removeHighlight(phone);
                phone.placeholder = "";
            }
            // 
            if (alternativeMob.value.trim() === "") {
                highlightField(alternativeMob);
                alternativeMob.placeholder = "Field is empty";
                isValid = false;
            } else {
                removeHighlight(alternativeMob);
                alternativeMob.placeholder = "";
            }
            //
            if (House_number_and_street.value.trim() === "") {
                highlightField(House_number_and_street);
                House_number_and_street.placeholder = "Field is empty";
                isValid = false;
            } else {
                removeHighlight(House_number_and_street);
                House_number_and_street.placeholder = "";
            }
            //
             if (Apartment.value.trim() === "") {
                highlightField(Apartment);
                Apartment.placeholder = "Field is empty";
                isValid = false;
            } else {
                removeHighlight(Apartment);
                Apartment.placeholder = "";
            }
            //
            if (City.value.trim() === "") {
                highlightField(City);
                City.placeholder = "Field is empty";
                isValid = false;
            } else {
                removeHighlight(City);
                City.placeholder = "";
            }
            //
            if (State.value.trim() === "") {
                highlightField(State);
                State.placeholder = "Field is empty";
                isValid = false;
            } else {
                removeHighlight(State);
                State.placeholder = "";
            }
            //
            if (Zip.value.trim() === "") {
                highlightField(Zip);
                Zip.placeholder = "Field is empty";
                isValid = false;
            } else {
                removeHighlight(Zip);
                Zip.placeholder = "";
            }
           

            return isValid;
        }

        function highlightField(field) {
            field.style.borderColor = "red";
            field.focus();
        }

        function removeHighlight(field) {
            field.style.borderColor = "";
        }

        function isValidEmail(email) {
            // Basic email format validation
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
    </script>

