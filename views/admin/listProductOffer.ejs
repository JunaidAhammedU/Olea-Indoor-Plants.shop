
<%- include('../partials/adminPartials/header.ejs') -%>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products Offer</h2>
        </div>
        <div>
            <a href="/admin/addProductOffer" class="btn btn-primary btn-sm rounded">Create new Offer</a>
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Search..." class="form-control" />
                </div>
                <div class="col-lg-2 col-6 col-md-3">
                    <select class="form-select">
                        <option>All category</option>
                        <option>Electronics</option>
                        <option>Clothings</option>
                        <option>Something else</option>
                    </select>
                </div>
                <div class="col-lg-2 col-6 col-md-3">
                    <select class="form-select">
                        <option>Latest added</option>
                        <option>Cheap first</option>
                        <option>Most viewed</option>
                    </select>
                </div>
            </div>
        </header>
        <!-- card-header end// -->
        <div class="card-body">
            <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                <!--  -->
                <% if (productOffers && productOffers.length > 0) { %>
                    <% productOffers.forEach(offer => { %>

                <div class="col">
                    <div class="card card-product-grid">
                        <a href="#" class="img-wrap"> <img src="/assets/products/<%= offer.productName.images[0] %>" alt="Product" /> </a>
                        <div class="info-wrap">
                            <a href="#" class="title text-truncate"><%= offer.productName.name %> plant</a>
                            <a href="#" class="title text-truncate">Have <%= offer.discountPercentage %>% OFF</a>
                            <a href="/admin/editProductOffer/<%= offer.id %>" class="btn btn-sm font-sm rounded btn-brand float-end"> <i class="material-icons md-edit"></i> Edit </a>
                        </div>
                    </div>
                </div>
                <% }) %>
                <% } else { %>
                    <tr>
                        <td class="text-danger" colspan="7">No Offer found.</td>
                    </tr>
                <% } %>
                <!--  -->
            </div>
        </div>  
    </div>
    </div>
