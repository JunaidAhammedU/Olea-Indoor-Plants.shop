            <script>
                toastr.options = {
                    "closeButton": true,
                    "newestOnTop": false,
                    "progressBar": true,
                    "positionClass": "toast-top-center",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "3000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "slideDown",
                    "hideMethod": "fadeOut"
                };
            
                function catOffer() {
                    let formData = $("#categoryOffer").serialize();
                    console.log(formData);
            
                    $.ajax({
                        url: '/admin/addCategoryOffer',
                        method: 'post',
                        data: formData,
                        success: (response) => {
                            if (response.status == true) {
                                toastr.success("Category offer placed"); // Corrected method name
                                window.location.href = '/addCategoryOffer';
                            } else {
                                toastr.error("Not Added Offer"); // Corrected method name
                            }
                        }
                    })
                }
            
            </script>
    
